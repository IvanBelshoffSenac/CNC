# =================================================================
# VARIÁVEIS DE AMBIENTE PARA DOCKER - SISTEMA CNC
# =================================================================
# Copie este arquivo para .env e ajuste os valores conforme necessário
# NUNCA commite o arquivo .env com dados sensíveis!

# =================================================================
# MYSQL/DATABASE
# =================================================================
MYSQL_ROOT_PASSWORD=root123_secure
DB_NAME=cnc
DB_USER=fecomercio
PASSWORD=fecomercio_secure_2024
DB_PORT=3306

# =================================================================
# APLICAÇÃO
# =================================================================
NODE_ENV=production

# =================================================================
# CREDENCIAIS CNC (Web Scraping)
# =================================================================
CREDENTIALS_USER=seu_email@dominio
CREDENTIALS_PASSWORD=sua_senha

# =================================================================
# URLs DA API CNC
# =================================================================
BASE_URL=https://backend.pesquisascnc.com.br/admin/4/upload
BASE_URL_SITE_ICEC=https://pesquisascnc.com.br/pesquisa-icec/
BASE_URL_SITE_ICF=https://pesquisascnc.com.br/pesquisa-icf/
BASE_URL_SITE_PEIC=https://pesquisascnc.com.br/pesquisa-peic/

# =================================================================
# EMAIL/SMTP
# =================================================================
EXCHANGE_HOST=smtp.office365.com
EXCHANGE_PORT=587
MAIL_USERNAME=no-reply@es.senac.br
MAIL_PASSWORD=sua_senha_email
NOTIFICATION_EMAIL=seu_email@dominio

# =================================================================
# AGENDAMENTOS CRON
# =================================================================
# Formato: "segundo minuto hora dia mês dia_da_semana"
SCHEDULE_ICEC=0 2 1 * *
SCHEDULE_ICF=0 5 1 * *
SCHEDULE_PEIC=0 8 1 * *

# =================================================================
# PERÍODOS DE COLETA
# =================================================================
PERIOD_ICEC=01/2010:-1M
PERIOD_ICF=01/2010:-2M
PERIOD_PEIC=01/2010:-1M

# =================================================================
# REGIÕES
# =================================================================
REGIONS_ICEC=BR,ES
REGIONS_ICF=BR,ES
REGIONS_PEIC=BR,ES

# =================================================================
# HABILITAÇÃO DE SERVIÇOS
# =================================================================
ENABLED_ICEC=true
ENABLED_ICF=true
ENABLED_PEIC=true

# =================================================================
# CONFIGURAÇÕES MYSQL AVANÇADAS (OPCIONAL)
# =================================================================
AUTO_CREATE_TABLES=true